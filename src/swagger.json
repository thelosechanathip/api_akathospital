        "tags": [
          "ComplaintTopic"
        ],
        "summary": "สำหรับอัพเดทข้อมูล ComplaintTopic",
        "description": "สำหรับอัพเดทข้อมูลทั้งหมดของ ComplaintTopic",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            },
            "description": "ID ของ ComplaintTopic ที่ต้องการอัพเดท"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "complaint_topic_name": {
                    "type": "string",
                    "example": "ร้องเรียนเจ้าหน้าที่"
                  },
                  "updated_by": {
                    "type": "string",
                    "example": "admin"
                  }
                },
                "required": [
                  "complaint_topic_name",
                  "updated_by"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ความสำเร็จทั่วไป",
